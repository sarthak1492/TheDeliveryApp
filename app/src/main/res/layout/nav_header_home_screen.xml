<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layoutGreetingsnName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <firstbreezeebizservice.deliveroz.TextViewOpenSansSemibold
            android:id="@+id/lblGreetings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/goodMorningTextSize"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"/>

        <firstbreezeebizservice.deliveroz.TextViewOpenSansSemibold
            android:id="@+id/lblName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblGreetings"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            app:layout_marginTopPercent="5%"
            android:textSize="@dimen/nameTextSize" />

    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>
