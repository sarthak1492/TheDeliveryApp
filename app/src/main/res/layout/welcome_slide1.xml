<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2e2745">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">

        <sarthaksharma.theDeliveryApp.TextViewMontserratRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Hello Food!"
            android:textColor="@android:color/white"
            android:textSize="@dimen/appNameTextSize"
            android:textStyle="bold" />

        <sarthaksharma.theDeliveryApp.TextViewOpenSansSemibold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The easiest way to order food from your favourite restaurant!"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/welcomeTextSize"
            app:layout_marginTopPercent="15%" />

    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>